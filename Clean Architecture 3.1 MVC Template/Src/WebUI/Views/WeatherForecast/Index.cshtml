@using Template.Application.WeatherForecasts.Queries.GetWeatherForecasts

@model IEnumerable<WeatherForecast>

@{
    ViewData["Title"] = "Weather Forecast";
}

<h1>@ViewData["Title"]</h1>

<p>This component demonstrates fetching data from the server.</p>

<table class='table table-striped' aria-labelledby="tableLabel" *ngIf="forecasts">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var forecast in Model)
        {
            <tr>
                <td>@forecast.Date</td>
                <td>@forecast.TemperatureC</td>
                <td>@forecast.TemperatureF</td>
                <td>@forecast.Summary</td>
            </tr>
        }
    </tbody>
</table>
